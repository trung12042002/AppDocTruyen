<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/giaodien">

    <TextView
        android:id="@+id/tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/ahihi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092"/>

    <TextView
        android:id="@+id/singin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tieude"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Sign in"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="#00008B"/>

    <EditText
        android:drawableRight="@drawable/ic_name"
        android:id="@+id/taikhoan"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/singin1"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:textColorHint="@color/black"
        android:hint="User name"
        android:textColor="@color/black"
        android:textSize="20dp"/>
    <EditText
        android:drawableRight="@drawable/ic_pass"
        android:id="@+id/matkhau"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/taikhoan"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:textColorHint="@color/black"
        android:hint="Pass work"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/dangnhap"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:textSize="20dp"
        android:layout_marginTop="470dp"
        android:hint="Đăng nhập"/>
    <Button
        android:id="@+id/dangky"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:textSize="20dp"
        android:layout_marginTop="550dp"
        android:hint="Đăng kí"/>


</RelativeLayout>